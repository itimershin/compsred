<p id="notice"><%= notice %></p>

<h1>Competences</h1>

<table class="table table-hover">
  <thead>
    <tr class="panel panel-heading">
      <th>Title</th>
      <th>Author</th>
      <th>Skillrate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.title %></td>
        <td><%= competence.author %></td>
        <td><%= competence.skillrate %></td>
        <td><%= link_to '  Показать ', competence, class: 'glyphicon glyphicon-triangle-right'  %></td>
        <td><%= link_to '  Редактировать ', edit_competence_path(competence),remote: true, class: 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to '  Удалить ', competence,remote: true, method: :delete, data: { confirm: 'вы уверены?' }, class: 'glyphicon glyphicon-remove'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Competence).new? %>
    <%= render 'form', competence: Competence.new %>
<% end %>
